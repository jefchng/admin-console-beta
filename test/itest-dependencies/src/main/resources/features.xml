<features name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <feature name="admin-app" install="auto" version="${project.version}"
             description="DDF Admin App (Beta) includes a source setup wizard, LDAP setup wizard and a new GUI for the web context policy manager. Go to /admin/beta to access the UI.">
        <bundle>mvn:org.codice.ddf.admin.beta/configurator-api/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query-api/${project.version}</bundle>
        <feature>admin-ui</feature>
        <feature>graphql</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query-sources-impl/${project.version}</bundle>
        <feature>wcpm-actioncreator</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query-utils/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query-ldap/${project.version}</bundle>
    </feature>

    <feature name="wcpm-actioncreator" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <bundle>mvn:org.apache.commons/commons-lang3/3.5</bundle>
        <feature>wcpm</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query-wcpm/${project.version}</bundle>
    </feature>

    <feature name="admin-ui" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <bundle>mvn:ddf.platform.error/platform-error-servlet/2.10.2</bundle>
        <bundle>mvn:ddf.platform.error/platform-error-api/2.10.2</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-ui/${project.version}</bundle>
    </feature>

    <feature name="wcpm" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <!--<feature prerequisite="true">wrap</feature>-->
        <!--<bundle>wrap:mvn:ddf.security.policy/security-policy-api/2.10.2$overwrite=merge&amp;Import-Package=*;resolution:=optional</bundle>-->

        <feature prerequisite="true">security-core-api</feature>
        <bundle>mvn:ddf.security.policy/security-policy-api/2.10.2</bundle>
        <bundle>mvn:ddf.security.policy/security-policy-context/2.10.2</bundle>
    </feature>

    <feature name="graphql" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <feature prerequisite="true">graphql-dependencies</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/configurator-api/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-graphql/${project.version}</bundle>
    </feature>

    <feature name="graphql-dependencies" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <bundle>mvn:commons-io/commons-io/2.5</bundle>
        <bundle>mvn:javax.servlet/javax.servlet-api/3.1.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.8.4</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.8.4</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.8.4</bundle>
        <bundle>mvn:com.fasterxml.jackson.datatype/jackson-datatype-jdk8/2.8.4</bundle>
        <bundle>mvn:commons-fileupload/commons-fileupload/1.3.2</bundle>
        <bundle>mvn:com.google.guava/guava/21.0</bundle>
        <bundle>mvn:commons-lang/commons-lang/2.6</bundle>
        <feature>war</feature>
        <feature>commons-validator</feature>
    </feature>

    <feature name="commons-validator" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <bundle>mvn:commons-validator/commons-validator/1.6</bundle>
        <bundle>mvn:commons-beanutils/commons-beanutils/1.9.3</bundle>
        <bundle>mvn:commons-collections/commons-collections/3.2.2</bundle>
        <bundle>mvn:commons-digester/commons-digester/1.8.1</bundle>
    </feature>

    <feature name="security-core-api" install="manual" version="${project.version}" description="Required dependencies for admin-beta-graphql">
        <feature prerequisite="true">security-core-api-deps</feature>
        <bundle>mvn:ddf.security.core/security-core-api/2.10.2</bundle>
    </feature>

